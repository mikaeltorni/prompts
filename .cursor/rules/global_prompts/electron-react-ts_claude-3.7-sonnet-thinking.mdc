        const timestamp = new Date().toISOString();
        const logMessage = `[${timestamp}] [INFO] ${message}`;
        console.log(logMessage);
        fs.appendFileSync(logFilePath, logMessage + '\n');
      },
      
      info: (message: string) => {
        const timestamp = new Date().toISOString();
